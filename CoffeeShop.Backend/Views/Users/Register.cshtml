@model CoffeeShop.Backend.Models.ViewModels.RegisterVm

@{
    ViewBag.Title = "新增員工";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>新增員工</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.LabelFor(model => model.Account, htmlAttributes: new { @class = "form-label col-md-2" })
            @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control", id = "Account" } })
            <span class="text-danger"></span>
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-label col-md-2" })
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", id = "Password" } })
            <span class="text-danger"></span>
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "form-label col-md-2" })
            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", id = "ConfirmPassword" } })
            <span class="text-danger"></span>
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-label col-md-2" })
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", id = "Name" } })
            <span class="text-danger"></span>
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "form-label col-md-2"})
            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", id = "Phone" } })
            <span class="text-danger"></span>
        </div>

        <div class="mb-3 d-flex align-items-center">
            <label for="IsStatus" class="form-label mb-0" style="margin-right: 10px;">在職狀態</label>
            <div class="form-switch">
                @Html.CheckBoxFor(model => model.IsStatus, new { @class = "form-check-input", id = "IsStatus" })
            </div>
        </div>


        <div class="mb-3">
            <h4 class="form-label col-md-2">群組</h4>
            <div class="col-md-10">
                @foreach (var group in ViewBag.Groups)
                {
                    <div class="form-check">
                        <input type="checkbox" name="selectedGroups" value="@group.Id" class="form-check-input" />
                        <label class="form-check-label">@group.GroupName</label>
                    </div>
                }
            </div>
        </div>

        <div class="mb-3">
            <input type="submit" value="新增" class="btn btn-primary" />
            @Html.ActionLink("返回", "Index", null, new { @class = "btn btn-outline-primary" })
        </div>
    </div>

    <div class="modal fade" id="registerSuccessModal" tabindex="-1" aria-labelledby="registerSuccessModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="registerSuccessModalLabel">新增成功</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    您的員工已成功註冊！
                </div>
                <div class="modal-footer">
                    <button type="button" id="confirmRegisterBtn" class="btn btn-primary" data-bs-dismiss="modal">確定</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/user-register.js"></script>
}
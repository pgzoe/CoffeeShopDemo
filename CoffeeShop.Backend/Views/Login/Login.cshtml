@model CoffeeShop.Backend.Models.ViewModels.LoginVm

@{
    ViewBag.Title = "使用者登入";
}

<div class="login-container">
    <div class="login-box">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <h4 class="text-center">使用者登入</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Account, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group text-center">
                <input type="submit" value="登入" class="btn btn-primary login" />
                <a href="@Url.Action("ForgotPassword", "Login", new { area = "" })" class="btn btn-primary password">忘記密碼?</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@model CoffeeShop.Models.EFModels.Menu
<style>
    body {
        background-color: #f7f7f7;
    }

    .container {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        width: 1200px;
        margin: 170px auto;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: flex-start; /* 元素從頂部對齊 */
        margin-top:400px;
    }


    .product-img {
        width: 400px; /* 調整圖片寬度 */
        height: 400px;
        object-fit: cover;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 5px;
        margin-right: 20px;
    }

    .product-details {
        flex-grow: 1; /* 讓文字區域自動擴展，佔據剩餘空間 */
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        font-size: 18px;
        line-height: 1.6;
    }

    .btn1 {
        flex: 1; /* 按鈕自動調整寬度 */
        margin: 0 10px; /* 調整按鈕之間的間距 */
        text-align: center;
        margin-top: 50px
    }

    .product-description {
        margin-top: 50px; /* 調整商品介紹的上邊距，數值可自行調整 */
    }
</style>



<div class="container">
    <!-- 動態顯示商品圖片 -->
    <img class="product-img" src="https://localhost:44382/uploads/Products/@Model.FileName" alt="@Model.ItemCName">

    <!-- 商品資訊 -->
    <div class="product-details">
        <h3>@Model.ItemCName</h3>
        <p>@Model.ItemEName</p>
        <p>價格: @Model.Price.ToString("C0")</p>

        <!-- 商品數量選擇 (範例) -->
        <div>
            <label for="quantity">數量 (下拉清單)</label>
            <select id="quantity" name="quantity">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>

        <!-- 商品介紹 -->
        <p class="product-description">
            @Model.Description
        </p>

        <!-- 操作按鈕區域 -->
        <div class="buttons" style="margin-top: 60px">
            <!-- 直接購買按鈕，改為 JavaScript 處理，提交後跳轉 -->
            <a href="javascript:void(0);" class="btn btn1" onclick="directPurchase(@Model.Id)">直接購買</a>

            <!-- 放入購物車按鈕 -->
            <a href="javascript:void(0);" class="btn btn1" onclick="addToCart(@Model.Id)">放入購物車</a>

            <!-- 返回上一頁按鈕 -->
            <a href="@Url.Action("Index", "Orders")" class="btn btn1">回上一頁</a>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        // 加入購物車（不跳轉）
        function addToCart(productId) {
            var quantity = document.getElementById("quantity").value;

            $.ajax({
                url: '@Url.Action("AddToCart", "Orders")',
                type: 'POST',
                data: {
                    id: productId,
                    quantity: quantity,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    Swal.fire({
                        title: '已加入購物車！',
                        text: '商品已成功加入購物車。',
                        icon: 'success',
                        confirmButtonText: '確定'
                    });
                },
                error: function () {
                    Swal.fire({
                        title: '錯誤',
                        text: '加入購物車時發生錯誤。',
                        icon: 'error',
                        confirmButtonText: '確定'
                    });
                }
            });
        }

        // 直接購買（加入購物車後跳轉）
        function directPurchase(productId) {
            var quantity = document.getElementById("quantity").value;

            $.ajax({
                url: '@Url.Action("AddToCart", "Orders")',
                type: 'POST',
                data: {
                    id: productId,
                    quantity: quantity,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    // 成功加入購物車後跳轉到購物車頁面
                    window.location.href = '@Url.Action("Cart", "Orders")';
                },
                error: function () {
                    Swal.fire({
                        title: '錯誤',
                        text: '加入購物車時發生錯誤。',
                        icon: 'error',
                        confirmButtonText: '確定'
                    });
                }
            });
        }
    </script>
}

@section styles {
    <link href="~/Content/style.css" rel="stylesheet" />
}

